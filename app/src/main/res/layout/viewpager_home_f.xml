<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/guide_ll_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="@dimen/margin_short"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pot_select1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/full_checked" />

        <ImageView
            android:id="@+id/iv_pot_select2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_middle"
            android:layout_marginStart="@dimen/margin_middle"
            android:src="@mipmap/empty_no_check" />

        <ImageView
            android:id="@+id/iv_pot_select3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/empty_no_check" />
    </LinearLayout>

</RelativeLayout>
